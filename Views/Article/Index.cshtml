@model IEnumerable<Article>
@{
	ViewBag.Title = "Articles";
}
<div class="row text">
	<div class="col-md-8 offset-2">
		<p><h1>Articles</h1></p>
		<table class="table table-bordered table-striped table-hover table-sm table-responsive">
			<thead class="table-dark">
				<tr>
					<th>Title</th>
					<th>Content</th>
					<th>Edit</th>
					<th>Delete</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var article in Model)
				{
					<tr>
						<td>@article.ArticleTitle</td>
						<td>@article.ArticleContent</td>
						<td><a class="text-dark btn btn-outline-success" asp-controller="Article" asp-action="EditArticle" asp-route-id="@article.ArticleId">Edit</a></td>
						<td><a class="text-dark btn btn-outline-danger" asp-controller="Article" asp-action="DeleteArticle" asp-route-id="@article.ArticleId">Delete</a></td>
					</tr>
				}
			</tbody>
		</table>
	</div>
</div>
